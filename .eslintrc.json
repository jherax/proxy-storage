{
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "globals": {},
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "valid-jsdoc": [1, {
      "requireReturnDescription": false
    }],
    "one-var": [2, {
      "uninitialized": "always"
    }],
    "max-len": 0,
    "object-curly-spacing": [2, "never"]
  }
}
